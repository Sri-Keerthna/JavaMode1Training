function attdemo(){
	var res="";
	if(frmAtt.chkSri.checked==true){
		res+="Sri Keerthna is present<br/>";
	}else{
		res+="Sri Keerthna is absent<br/>";
	}
	document.getElementById("res").innerHTML=res;
}
